<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme 1"
                android:textSize="@dimen/size16sp"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:id="@+id/tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/text"
                android:layout_alignTop="@+id/text"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pick_theme"
                android:layout_below="@id/text"
                android:layout_marginTop="@dimen/size30dp"
                android:layout_marginStart="@dimen/size40dp"
                android:layout_marginEnd="@dimen/size40dp"
                android:background="?colorAccent"
                android:foreground="?attr/selectableItemBackground"
                android:textColor="@color/whitePrimary"
                android:padding="16dp"
                android:id="@+id/button"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buy"
                android:layout_below="@id/button"
                android:layout_marginTop="@dimen/size30dp"
                android:layout_marginStart="@dimen/size40dp"
                android:layout_marginEnd="@dimen/size40dp"
                android:background="?colorAccent"
                android:foreground="?attr/selectableItemBackground"
                android:textColor="@color/whitePrimary"
                android:padding="16dp"
                android:id="@+id/buttonBuy"
                android:visibility="gone"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
