<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size250dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?colorPrimary">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/size16dp">
        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_equalizer"
            android:background="@null" />
        <com.riseapps.xmusic.widgets.MainTextView
            android:id="@+id/dialog_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_a_preset"
            android:textSize="@dimen/size16sp"
            android:layout_marginStart="8dp"
            android:textColor="?android:textColorTertiary"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll">

        <RadioButton
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:checked="true"
            android:text="@string/normal_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:id="@+id/classical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="@string/classical_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:id="@+id/dance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dance_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="@string/flat_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:id="@+id/folk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folk_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:id="@+id/heavy_metal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="@string/heavy_metal_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:id="@+id/hip_hop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hip_hop_preset"
            android:textSize="@dimen/size14sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:id="@+id/jazz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="@string/jazz_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:id="@+id/pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pop_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"/>

        <RadioButton
            android:id="@+id/rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="@string/rock_preset"
            android:textSize="@dimen/size15sp"
            android:textColor="?android:textColorTertiary"
            />
    </RadioGroup>

    <Button
        android:id="@+id/done"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/ok"
        android:textColor="?android:textColorTertiary"
        android:textSize="@dimen/size18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group" />

</android.support.constraint.ConstraintLayout>