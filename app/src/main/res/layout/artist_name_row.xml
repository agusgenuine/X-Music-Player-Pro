<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artist_list_card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="?colorPrimary"
    android:layout_marginTop="2dp"
    android:foreground="?selectableItemBackgroundBorderless">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/artist_art_card"
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_singer"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/artist_art_card"
            android:layout_alignTop="@+id/artist_art_card"
            android:layout_marginStart="12sp"
            android:layout_toEndOf="@+id/artist_art_card"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.riseapps.xmusic.widgets.MainTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:maxLines="2"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/size14sp"
                tools:text="TextView" />

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>