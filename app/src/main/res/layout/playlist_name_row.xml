<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlist_list_card"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="?colorPrimary"
    android:layout_marginTop="2dp"
    android:foreground="?selectableItemBackgroundBorderless">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/playlist"
            android:layout_marginStart="20dp"/>

        <com.riseapps.xmusic.widgets.MainTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/size16sp"
            tools:text="TextView"
            android:layout_marginStart="25dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imageView1"/>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/size20dp"
            android:layout_height="@dimen/size20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size8dp"
            android:background="@drawable/ripple"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_delete" />


        <!---->
    </RelativeLayout>
</android.support.v7.widget.CardView>